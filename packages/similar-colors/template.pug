doctype html
html
    head
        style(type="text/css").
            li {
                font-size: 20px;
                display: flex;
                align-items: center;
            }
            .text {
                display: inline-block;
                width: 25ch;
                padding-left: 1ch;
                font-family: monospace;
            }
            .separator {
                padding: 1ch;
            }
            .text:last-child {
                width: auto;
            }
            .indicator {
                display: inline-block;
                width: 40px;
                height: 40px;
            }
    body
        ul
            each item in hits
                li
                    span.indicator(style={background: item.from.hex()})
                    span.text #{item.source}
                    span.separator =>
                    span.indicator(style={background: item.to.color.hex()})
                    span.text #{item.to.name}
